---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section class="bs-container bs-mt-lg" id="booking">
  
  <!-- Title -->
  { title && <h2 class="bs-h2 text-center">{ title }</h2>}
  
  <!-- Description -->
  <p class="text-xl text-center mt-8 max-w-2xl mx-auto">
    Ready to discuss your project? Schedule a consultation to explore how we can help transform your business.
  </p>
  
  <!-- Booking iframe -->
  <div class="mt-8 rounded-xl overflow-hidden bg-bs-surface-0/90 p-2">
    <iframe 
      src="https://outlook.office.com/book/TechnicalSupportandConsultation@chriscastrotech.com/?ismsaljsauthenabled"
      width="100%"
      height="700"
      frameborder="0"
      style="border:0; border-radius: 0.5rem;"
      allowfullscreen>
    </iframe>
  </div>
  
</section>